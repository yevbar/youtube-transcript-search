{
  "name": "YouTube Transcript Search",
  "description": "Search through transcripts of YouTube videos you've watched",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["storage", "tabs"],
  "host_permissions": ["*://*.youtube.com/*"],
  "action": {
    "default_popup": "html/popup.html",
    "default_icon": "assets/icons/search.png"
  },
  "background": {
    "service_worker": "js/background/background.js"
  },
  "content_scripts": [{
    "matches": ["*://*.youtube.com/*"],
    "js": ["js/content/content.js"],
    "run_at": "document_idle"
  }],
  "web_accessible_resources": [{
    "resources": ["js/injected/dist/injected.bundle.js"],
    "matches": ["*://*.youtube.com/*"]
  }]
}
